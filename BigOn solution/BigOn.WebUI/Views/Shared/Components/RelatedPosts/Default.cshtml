@model IEnumerable<BlogPost>

<div class="blog-related-post recent-post mtb-50">
    <h3 class="sidebar-title">related blog post</h3>
    <div class="blog-related-post-active owl-carousel">
        <!-- Single Blog Start -->
        @foreach(var item in Model)
        {
            <div class="single-blog">
            <div class="blog-img">
                <a asp-controller="blog" asp-action="details" asp-rooute-slug="@item.Slug">
                    <img src="~/uploads/images/@item.ImagePath" alt="blog-image"></a>
            </div>
            <div class="blog-content">
                <div class="blog-content-upper">
                    <h6 class="blog-title"><a asp-controller="blog" asp-action="details" asp-rooute-slug="@item.Slug">@item.Title</a></h6>
                    <p class="blog-short-content">@item.Body.ToPlainText()</p>
                </div>
                <div class="blog-content-lower">
                    <a href="https://themeforest.net/user/Bigon">Bigon</a>
                    <span class="f-right">@item.PublishedDate?.ToString("dd MMM, yyyy")</span>
                </div>
            </div>
        </div>
        }
        <!-- Single Blog End -->
      
      
    </div>
</div>